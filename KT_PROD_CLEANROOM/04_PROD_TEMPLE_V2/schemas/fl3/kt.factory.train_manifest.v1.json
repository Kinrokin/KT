{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT FL3 Factory Train Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "train_id",
    "job_id",
    "dataset_id",
    "base_model_id",
    "training_mode",
    "output_bundle",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.factory.train_manifest.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "train_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "job_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "dataset_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "base_model_id": { "type": "string" },
    "training_mode": { "type": "string", "enum": [ "lora", "head_only" ] },
    "output_bundle": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "artifact_path", "artifact_hash" ],
      "properties": {
        "artifact_path": { "type": "string" },
        "artifact_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    },
    "created_at": { "type": "string" }
  }
}

