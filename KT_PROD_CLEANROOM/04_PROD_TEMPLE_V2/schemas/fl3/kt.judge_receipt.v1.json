{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "kt.judge_receipt.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "receipt_id",
    "work_order_id",
    "verdict",
    "reasons",
    "advisories",
    "checks",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.judge_receipt.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "receipt_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "work_order_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "verdict": { "type": "string", "enum": ["PASS", "FAIL", "FAIL_CLOSED"] },
    "reasons": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 256 } },
    "advisories": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 256 } },
    "checks": { "type": "object" },
    "created_at": { "type": "string", "minLength": 1, "maxLength": 64 }
  }
}
