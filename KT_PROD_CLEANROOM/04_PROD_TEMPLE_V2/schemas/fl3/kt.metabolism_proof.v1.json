{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "kt.metabolism_proof.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "proof_id",
    "base_job_id",
    "perturbations",
    "assertions",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.metabolism_proof.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "proof_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "base_job_id": { "type": "string", "minLength": 8 },
    "perturbations": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "job_id", "hash_manifest_root_hash"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "job_id": { "type": "string", "minLength": 8 },
          "hash_manifest_root_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
        }
      }
    },
    "assertions": {
      "type": "object",
      "additionalProperties": false,
      "required": ["all_schema_valid", "roots_distinct"],
      "properties": {
        "all_schema_valid": { "type": "boolean" },
        "roots_distinct": { "type": "boolean" }
      }
    },
    "created_at": { "type": "string" }
  }
}
