{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT FL3 Factory Organ Contract v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "contract_id",
    "entrypoints",
    "allowed_base_models",
    "allowed_training_modes",
    "allowed_output_schemas",
    "allowed_export_roots",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.factory.organ_contract.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "contract_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "entrypoints": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "run_job" ],
      "properties": {
        "run_job": { "type": "object", "additionalProperties": false, "required": [ "path", "sha256" ],
          "properties": { "path": { "type": "string" }, "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" } } },
        "harvest": { "type": "object", "additionalProperties": false, "required": [ "path", "sha256" ],
          "properties": { "path": { "type": "string" }, "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" } } },
        "judge": { "type": "object", "additionalProperties": false, "required": [ "path", "sha256" ],
          "properties": { "path": { "type": "string" }, "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" } } },
        "train": { "type": "object", "additionalProperties": false, "required": [ "path", "sha256" ],
          "properties": { "path": { "type": "string" }, "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" } } },
        "evaluate": { "type": "object", "additionalProperties": false, "required": [ "path", "sha256" ],
          "properties": { "path": { "type": "string" }, "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" } } },
        "promote": { "type": "object", "additionalProperties": false, "required": [ "path", "sha256" ],
          "properties": { "path": { "type": "string" }, "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" } } },
        "register": { "type": "object", "additionalProperties": false, "required": [ "path", "sha256" ],
          "properties": { "path": { "type": "string" }, "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" } } },
        "freeze": { "type": "object", "additionalProperties": false, "required": [ "path", "sha256" ],
          "properties": { "path": { "type": "string" }, "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" } } }
      }
    },
    "allowed_base_models": { "type": "array", "items": { "type": "string" } },
    "allowed_training_modes": { "type": "array", "items": { "type": "string" } },
    "allowed_output_schemas": { "type": "array", "items": { "type": "string" } },
    "allowed_export_roots": { "type": "array", "items": { "type": "string" } },
    "created_at": { "type": "string" }
  }
}
