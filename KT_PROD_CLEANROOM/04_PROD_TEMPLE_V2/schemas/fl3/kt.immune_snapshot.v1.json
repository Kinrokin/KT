{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT FL3 Immune Snapshot v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "snapshot_id",
    "immune_events_total",
    "counts",
    "parent_hash",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.immune_snapshot.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "snapshot_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "immune_events_total": { "type": "integer", "minimum": 0 },
    "counts": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "paradox_event", "trace_violation", "schema_violation" ],
      "properties": {
        "paradox_event": { "type": "integer", "minimum": 0 },
        "trace_violation": { "type": "integer", "minimum": 0 },
        "schema_violation": { "type": "integer", "minimum": 0 }
      }
    },
    "parent_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "created_at": { "type": "string" }
  }
}

