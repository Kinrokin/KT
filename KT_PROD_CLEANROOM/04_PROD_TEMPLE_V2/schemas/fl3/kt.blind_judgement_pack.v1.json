{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT FL3 Blind Judgement Pack v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "pack_id",
    "job_id",
    "items",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.blind_judgement_pack.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "pack_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "job_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [ "prompt_hash", "candidate_hash" ],
        "properties": {
          "prompt_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "candidate_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
        }
      }
    },
    "created_at": { "type": "string" }
  }
}

