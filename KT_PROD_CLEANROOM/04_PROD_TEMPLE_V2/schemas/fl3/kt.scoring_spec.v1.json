{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT Scoring Spec v1 (Metric Definition)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "spec_id",
    "metrics",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.scoring_spec.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "spec_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "metrics": { "type": "array", "minItems": 1, "items": { "type": "object" } },
    "created_at": { "type": "string" }
  }
}
