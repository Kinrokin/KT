{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT FL3 Global Unlock Artifact v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "unlock_id",
    "payload_hash",
    "reason_codes",
    "signoffs",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.global_unlock.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "unlock_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "payload_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "reason_codes": { "type": "array", "items": { "type": "string" } },
    "signoffs": { "type": "array", "items": { "type": "object" } },
    "created_at": { "type": "string" }
  }
}

