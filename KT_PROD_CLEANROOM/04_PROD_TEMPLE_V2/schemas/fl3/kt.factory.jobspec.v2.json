{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT FL3 Factory JobSpec v2 (Addendum)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "job_id",
    "adapter_id",
    "adapter_version",
    "role",
    "mode",
    "run_kind",
    "base_model_id",
    "training_mode",
    "seed",
    "export_shadow_root",
    "export_promoted_root"
  ],
  "properties": {
    "schema_id": { "const": "kt.factory.jobspec.v2" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "job_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "adapter_id": { "type": "string" },
    "adapter_version": { "type": "string" },
    "role": { "type": "string" },
    "mode": { "type": "string", "enum": [ "SMOKE", "STANDARD", "SOVEREIGN", "SHADOW" ] },
    "run_kind": { "type": "string", "enum": [ "STANDARD", "VRR", "TOURNAMENT", "BREEDING" ] },
    "base_model_id": { "type": "string" },
    "training_mode": { "type": "string", "enum": [ "lora", "head_only" ] },
    "seed": { "type": "integer" },
    "export_shadow_root": { "type": "string" },
    "export_promoted_root": { "type": "string" },
    "tournament": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "entrants" ],
      "properties": {
        "entrants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [ "adapter_id", "adapter_version", "signal_quality" ],
            "properties": {
              "adapter_id": { "type": "string" },
              "adapter_version": { "type": "string" },
              "signal_quality": { "type": "object" }
            }
          }
        },
        "max_risk": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "max_strikes": { "type": "integer", "minimum": 0 }
      }
    },
    "breeding": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "batch_fraction", "shadow_sources" ],
      "properties": {
        "batch_fraction": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "shadow_sources": { "type": "array", "minItems": 1, "items": { "type": "string" } }
      }
    }
  }
}

