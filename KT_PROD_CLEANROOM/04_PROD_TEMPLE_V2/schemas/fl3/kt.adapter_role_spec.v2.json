{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT FL3 Adapter Role Spec v2 (Positive + Negative Axes)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_id", "schema_version_hash", "role_spec_id", "roles", "created_at"],
  "properties": {
    "schema_id": { "const": "kt.adapter_role_spec.v2" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "role_spec_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "roles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["role_id", "positive", "negative"],
        "properties": {
          "role_id": { "type": "string" },
          "positive": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["axis", "weight"],
              "properties": {
                "axis": { "type": "string" },
                "weight": { "type": "number", "minimum": 0.0, "maximum": 1.0 }
              }
            }
          },
          "negative": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["axis", "max_value"],
              "properties": {
                "axis": { "type": "string" },
                "max_value": { "type": "number", "minimum": 0.0, "maximum": 1.0 }
              }
            }
          }
        }
      }
    },
    "created_at": { "type": "string" }
  }
}
