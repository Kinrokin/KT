{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT FL3 Anchor Reference Set v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "anchor_set_id",
    "baseline_model_id",
    "generation_params",
    "items",
    "set_hash",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.anchor_reference_set.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "anchor_set_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "baseline_model_id": { "type": "string" },
    "generation_params": {
      "type": "object",
      "additionalProperties": false,
      "required": ["temperature", "top_p", "max_tokens"],
      "properties": {
        "temperature": { "type": "number", "minimum": 0.0, "maximum": 2.0 },
        "top_p": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "max_tokens": { "type": "integer", "minimum": 1 }
      }
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["prompt", "baseline_response"],
        "properties": {
          "prompt": { "type": "string" },
          "baseline_response": { "type": "string" }
        }
      }
    },
    "set_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "created_at": { "type": "string" }
  }
}
