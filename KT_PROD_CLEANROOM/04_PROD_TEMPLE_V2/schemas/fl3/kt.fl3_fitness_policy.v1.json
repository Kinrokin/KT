{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT FL3 Fitness Policy v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "policy_id",
    "risk_max",
    "governance_strikes_max",
    "min_immune_events",
    "ece_max",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.fl3_fitness_policy.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "policy_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "risk_max": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
    "governance_strikes_max": { "type": "integer", "minimum": 0 },
    "min_immune_events": { "type": "integer", "minimum": 0 },
    "ece_max": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
    "created_at": { "type": "string" }
  }
}

