{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT FL4 Promoted Index v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "index_id",
    "entries",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.promoted_index.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "index_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "entries": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "adapter_id",
          "adapter_version",
          "content_hash",
          "promoted_manifest_ref"
        ],
        "properties": {
          "adapter_id": { "type": "string" },
          "adapter_version": { "type": "string" },
          "content_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "promoted_manifest_ref": { "type": "string" }
        }
      }
    },
    "created_at": { "type": "string" }
  }
}

