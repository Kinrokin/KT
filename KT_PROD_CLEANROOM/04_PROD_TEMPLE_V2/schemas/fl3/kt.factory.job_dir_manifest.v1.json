{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT FL4 Factory Job Directory Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "job_dir_manifest_id",
    "job_id",
    "files",
    "hash_manifest_root_hash",
    "parent_hash",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "kt.factory.job_dir_manifest.v1" },
    "schema_version_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "job_dir_manifest_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "job_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [ "path", "required", "sha256" ],
        "properties": {
          "path": { "type": "string" },
          "required": { "type": "boolean" },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
        }
      }
    },
    "hash_manifest_root_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "parent_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "created_at": { "type": "string" }
  }
}
