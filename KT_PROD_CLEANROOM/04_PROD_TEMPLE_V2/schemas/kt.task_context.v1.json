{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KT Task Context v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version_hash",
    "task_id",
    "domain_tags",
    "risk_class",
    "constraints",
    "epoch_context",
    "input_refs"
  ],
  "properties": {
    "schema_id": {
      "const": "kt.task_context.v1"
    },
    "schema_version_hash": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$"
    },
    "task_id": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$"
    },
    "domain_tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "risk_class": {
      "type": "string",
      "enum": [
        "LOW",
        "MEDIUM",
        "HIGH"
      ]
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "epoch_context": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "epoch_id",
        "profile"
      ],
      "properties": {
        "epoch_id": {
          "type": "string"
        },
        "profile": {
          "type": "string"
        }
      }
    },
    "input_refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
